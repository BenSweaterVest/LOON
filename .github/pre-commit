#!/bin/bash
# Pre-commit hook for LOON
# Prevents commits with common issues (secrets, invalid JSON, etc.)
# 
# To enable:
#   chmod +x .git/hooks/pre-commit
#   cp .github/pre-commit .git/hooks/pre-commit

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}\n"

# Check for secrets
echo "Checking for hardcoded secrets..."
if grep -r --include="*.js" --include="*.html" -E "(password|secret|token|key)\s*[:=]\s*['\"][^'\"]{20,}" . 2>/dev/null | grep -v "placeholder\|example\|YOUR_\|your-\|xxxxx\|github_pat_xxxx" | grep -v ".env\|node_modules" 2>/dev/null; then
    echo -e "${RED}[ERROR] Potential hardcoded secrets found!${NC}"
    echo "  Review the matches above and remove sensitive data"
    exit 1
fi
echo -e "${GREEN}[OK] No hardcoded secrets detected${NC}\n"

# Validate JSON files
echo "Validating JSON files..."
find . -name "*.json" -type f -not -path "./node_modules/*" -not -path "./.git/*" | while read file; do
    if ! python3 -m json.tool "$file" > /dev/null 2>&1; then
        echo -e "${RED}[ERROR] Invalid JSON: $file${NC}"
        exit 1
    fi
done
echo -e "${GREEN}[OK] All JSON files are valid${NC}\n"

# Check JavaScript syntax
echo "Checking JavaScript syntax..."
find functions -name "*.js" -type f 2>/dev/null | while read file; do
    if ! node --check "$file" 2>/dev/null; then
        echo -e "${RED}[ERROR] Invalid JavaScript: $file${NC}"
        exit 1
    fi
done
echo -e "${GREEN}[OK] All JavaScript files are valid${NC}\n"

# Check for console.log in production code (warning, not error)
echo "Checking for debug statements..."
CONSOLE_LOGS=$(grep -r "console\.log\|console\.debug" functions/api/*.js 2>/dev/null | grep -v "console.error\|console.warn" | wc -l)
if [ "$CONSOLE_LOGS" -gt 0 ]; then
    echo -e "${YELLOW}Warning: Found console.log statements in production code${NC}"
    echo "  These should be removed before deployment"
fi

echo -e "\n${GREEN}[OK] Pre-commit checks passed!${NC}\n"
exit 0
